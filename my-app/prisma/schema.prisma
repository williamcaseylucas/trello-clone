datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id String @id @default(uuid())
  orgId String
  title String
  imageId String
  imageThumbUrl String @db.Text // needed to accept long amount of characters
  imageFullUrl String @db.Text
  imageUserName String @db.Text
  imageLinkHTML String @db.Text

  lists List[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model List {
  id String @id @default(uuid())
  title String
  // represents position on screen
  order Int

  boardId String
  // Delete this board when the other board is deleted
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  // Because Card references this, we need to have it in our schema
  cards Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
}

model Card {
  id String @id @default(uuid())
  title String
  order Int
  description String? @db.Text

  listId String
  list List @relation(fields: [listId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([listId])
}